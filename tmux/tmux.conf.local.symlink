# -- clipboard -------------------------------------------------------------------------------------

# in copy mode, copying selection also copies to the OS clipboard
#   - true
#   - false (default)
# on macOS, this requires installing reattach-to-user-namespace, see README.md
# on Linux, this requires xsel or xclip
tmux_conf_copy_to_os_clipboard=true


# -- user customizations ---------------------------------------------------------------------------
# this is the place to override or undo settings

# increase history size
#set -g history-limit 10000

# start with mouse mode enabled
set -g mouse on

# force Vi mode
#   really you should export VISUAL or EDITOR environment variable, see manual
#set -g status-keys vi
#set -g mode-keys vi

# replace C-b by C-a instead of using both prefixes
#set -gu prefix2
unbind C-b
unbind C-a
set -g prefix C-Space                        # GNU-Screen compatible prefix
bind C-Space send-prefix
set -g prefix2 C-a
bind C-a send-prefix

# move status line to top
#set -g status-position top

# -- my personal settings --------------------------------------------------------------------------

# use tmux instead of screen - italics support added for my tmux
set -g default-terminal "tmux-256color" # colors!

# Automatically set window title
set-window-option -g automatic-rename on
set -g set-titles on
set -g set-titles-string '#S: #I #W'

# since window numbering starts at 1 and not 0, bind 0 to window 10
bind 0 select-window -t :10

# Cursor color overrides - see https://www.mail-archive.com/tmux-users@lists.sourceforge.net/msg03044.html
setw -ga terminal-overrides ',*:Cc=\E[?120;%p1%s;240c:Cr=\E[?120;0;240c:civis=\E[?25l:cnorm=\E[?25h:cvvis=\E[?25h,'
set -g default-shell $SHELL

# Use Alt-arrows to switch panes --> NOT WORKING FOR LEFT AND RIGHT YET
bind -n M-Left select-pane -L
bind -n M-Right select-pane -R
bind -n M-Up select-pane -U
bind -n M-Down select-pane -D

# Use Shift-arrows to switch windows
bind -n S-Left  previous-window
bind -n S-Right next-window

# Pane splitting.
unbind %
unbind _
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"

# Toggle pane titles
#unbind t
#bind t command-prompt "select-pane -T '%%'"

# Use r to quickly reload tmux settings
unbind r
bind r \
	source-file ~/.tmux.conf \;\
	display 'Reloaded tmux config'

# toggles synchronize-panes
bind S set-window-option synchronize-panes

# override pane border
set -g pane-border-format "#{pane_index}: #{pane_title} (#{pane_current_command})"

# move clock key
unbind t
bind Â§ clock-mode

# toggle pane title visibility
bind T run 'zsh -c "arr=( off top ) && tmux setw pane-border-status \${arr[\$(( \${arr[(I)#{pane-border-status}]} % 2 + 1 ))]}"'
# rename pane
bind t command-prompt -p "(rename-pane)" -I "#T" "select-pane -T '%%'"
#setw pane-border-status top

# -- Settings from tmux sensible - see https://github.com/tmux-plugins/tmux-sensible ---------------

# address vim mode switching delay (http://superuser.com/a/252717/65504)
set -s escape-time 0

# increase scrollback buffer size
set -g history-limit 50000

# tmux messages are displayed for 4 seconds
set -g display-time 4000

# refresh 'status-left' and 'status-right' more often
set -g status-interval 5

# focus events enabled for terminals that support them
set -g focus-events on

# -- Tmux Plugin Manager - see https://github.com/tmux-plugins/tpm ---------------------------------
# List of plugins
#set -g @plugin 'tmux-plugins/tpm'
#set -g @plugin 'tmux-plugins/tmux-sensible'
